---
import ModeToggler from "./ModeToggler";
import SidebarControl from "../components/Sidebar/Control.astro";
import { routes } from "../constants";
import Sidebar from "./Sidebar/Sidebar.astro";
const {pathname} = new URL(Astro.request.url);
---

<div class="flex justify-between items-center py-4 h-20 xl:mt-10">
  <div class="hidden md:flex items-center gap-8">
    {routes.map(({name, href}) => <a class={`block py-1.5 px-3 rounded-md hover:bg-light-200 dark:hover:bg-dark-200 ${href === pathname && 'dark:bg-dark-200 bg-light-200'}`} href={href}>{name}</a>)}
  </div>
  <SidebarControl />
  <Sidebar />
  <ModeToggler client:load />
</div>
